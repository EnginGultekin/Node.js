<!DOCTYPE html>
<html lang="en">

<!-- Header -->
<%- include('partials/_header.ejs') -%>

  <body>

    <!-- Navigation -->
    <%- include('partials/_navigation.ejs') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="page-heading">
                <h1>Add New Post</h1>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <form method="POST" action="/blog" encType="multipart/form-data">

              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Post Title</label>
                  <input name="title" type="text" class="form-control" placeholder="Post Title" required
                    data-validation-required-message="Please enter post title.">
                </div>
              </div>
              <div class="control-group mt-2">
                <div class="form-group floating-label-form-group controls">
                  <label>Post Subtitle</label>
                  <input name="subtitle" type="text" class="form-control" placeholder="Post Subtitle">
                </div>
              </div>

              <div class="control-group mt-2">
                <div class="form-group floating-label-form-group controls">
                  <label>Post Detail</label>
                  <textarea rows="5" name="detail" class="form-control" placeholder="Post Detail" required
                    data-validation-required-message="Please enter a message."></textarea>
                </div>
              </div>

              <div class="control-group mt-2">
                <div class="form-group floating-label-form-group controls">
                  <label>Author Name</label>
                  <input name="author" type="text" class="form-control" placeholder="Author Name" required
                    data-validation-required-message="Please enter post title.">
                </div>
              </div>
              <br>
              <div class="control-group mt-2">
                <div class="form-group ">
                  <label for="file" class="bt btn-secondary btn-md px-3 py-2">Select Image</label>
                  <input id="file" type="file" style="display:none" name="image" class="form-control-file rounded-0"
                    required />
                </div>
              </div>

              <div id="success"></div>
              <button type="submit" class="btn btn-primary d-block ml-auto mr-0 px-5"
                id="sendMessageButton">Send</button>
            </form>
          </div>
        </div>
      </div>

      <hr>

      <!-- Footer -->
      <%- include('partials/_footer.ejs') -%>

        <!-- Contact Form JavaScript -->
        <script src="js/jqBootstrapValidation.js"></script>
        <script src="js/contact_me.js"></script>

        <!-- Custom scripts for this template -->
        <script src="js/clean-blog.min.js"></script>

  </body>

</html>